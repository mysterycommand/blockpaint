{
  "name": "blockpaint",
  "version": "1.4.0",
  "description": "A MacPaintâ„¢-like Dapp for the Blockstack ecosystem",
  "repository": "git@github.com:mysterycommand/blockpaint.git",
  "homepage": "https://mysterycommand.github.io/blockpaint",
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "reset": "yarn clean node_modules/ && yarn install",
    "clean": "rm -rf build/",
    "start": "craco start",
    "build": "craco build",
    "lint": "eslint 'src/**/*.{j,t}s?(x)'",
    "test": "craco test",
    "eject": "react-scripts eject",
    "component": "node ./src/cli"
  },
  "engines": {
    "node": "12.13.1",
    "npm": "6.13.1",
    "yarn": "1.19.2"
  },
  "dependencies": {
    "blockstack": "19.3.0",
    "react": "16.12.0",
    "react-dom": "16.12.0"
  },
  "devDependencies": {
    "@craco/craco": "5.6.2",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/commit-analyzer": "6.3.3",
    "@semantic-release/git": "7.0.18",
    "@semantic-release/github": "5.5.5",
    "@semantic-release/npm": "5.3.4",
    "@semantic-release/release-notes-generator": "7.3.5",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.14",
    "@types/react": "16.9.15",
    "@types/react-dom": "16.9.4",
    "commitizen": "4.0.3",
    "craco-blockstack": "1.0.2",
    "cz-conventional-changelog": "3.0.2",
    "jest-canvas-mock": "2.2.0",
    "lodash": "4.17.15",
    "prettier": "1.19.1",
    "react-scripts": "3.2.0",
    "semantic-release": "15.13.31",
    "semantic-release-github-pr": "https://github.com/mysterycommand/semantic-release-github-pr.git#fix/34-and-35",
    "typescript": "3.7.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{j,t}s?(x)",
      "!<rootDir>/node_modules/"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
