{
  "name": "blockpaint",
  "version": "0.1.0",
  "description": "A MacPaintâ„¢-like Dapp for the Blockstack ecosystem",
  "repository": "git@github.com:mysterycommand/blockpaint.git",
  "homepage": "https://mysterycommand.github.io/blockpaint",
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "reset": "yarn clean node_modules/",
    "clean": "rm -rf build/",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint 'src/**/*.{j,t}s?(x)'",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "engines": {
    "node": "10.15.3",
    "npm": "6.9.0",
    "yarn": "1.15.2"
  },
  "dependencies": {
    "blockstack": "19.1.0",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/commit-analyzer": "6.1.0",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/github": "5.2.10",
    "@semantic-release/npm": "5.1.4",
    "@semantic-release/release-notes-generator": "7.1.4",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.7",
    "@types/react": "16.8.14",
    "@types/react-dom": "16.8.4",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "prettier": "1.17.0",
    "react-scripts": "3.0.0",
    "semantic-release": "15.13.3",
    "semantic-release-github-pr": "5.1.0",
    "typescript": "3.4.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{j,t}s?(x)",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  }
}
